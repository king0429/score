/**app.wxss**/
.container {
  height: 100%;
} 
.tap-hover{
  opacity: .8;
}
/*公共banner  */
.header{
  height: 120rpx;
  overflow: hidden;
}
.banner{
  position: relative;
  width: 100%;
  height: 340rpx;
}
.banner image{
  width: 100%;
  height: 340rpx;
  position: absolute;
  top: 0;
  z-index: -2;
}
.userinfo{
  height: 100%;
  color: #fff;
  width: 100%;
}
.info{
  height: 120rpx;
  text-align: center;
  line-height: 140rpx;
  font-size: 16px;
}
.info text:first-child{
  margin: 0 20rpx;
}