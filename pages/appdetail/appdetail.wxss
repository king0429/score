page{
  background: #f0f0f0;
  height: 100%;
}
.sheet{
  width: 640rpx;
  padding:30rpx;
  margin: 30rpx auto;
  background: #fff;
  border-radius: 12rpx;
  box-shadow: -2rpx 2rpx 2rpx 2rpx rgba(111, 111, 111, .5);
  font-size: 14px;
}
.sheetTitle{
  font-size: 16px;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  color: #333;
}
.sheetItem{
  height: 75rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #333;
}
.symbol{
  width: 10rpx;
  height: 10rpx;
  border-radius: 50%;
  background: #38adff;
  border: 2px solid #1269a6;
  margin-right: 12rpx;
}
.sheetItem>view:first-child{
  display: flex;
  height: 100%;
  align-items: center;
  width: 30%;
}
.sheetItem>view:last-child{
  display: flex;
  height: 100%;
  align-items: center;
  width: 70%;
}
.sheetItem>view:last-child input{
  width: 440rpx;
  margin-top: 5rpx;
}
.btn-sub{
  width: 280rpx;
  height: 80rpx;
  background: #38adff;
  color: #fff;
  border-radius:60rpx; 
  text-align: center;
  line-height: 80rpx;
  font-size: 16px;
  margin: 0 auto;
  margin-top: 30rpx;  
  margin-bottom: 10rpx;
}