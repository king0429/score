page{
  min-height: 100%;
  background: #f0f0f0;
}
.pointType{
  width: 700rpx;
  margin: 30rpx auto;
  background: #fff;
  border-radius: 18rpx;
  height: 240rpx;
  display: flex;
  flex-wrap: wrap;
  font-size: 14px;
  box-shadow: -2rpx 2rpx 2px 2rpx rgba(111,111,111, .5);
}
.pointType>view{
  width: 49.5%;
  height: 50%; 
  display: flex;
  align-items: center;
  justify-content: center;
}
.point{
  display: flex;
  align-items: center;
  justify-content: center;
  height: 70rpx;
  width: 99.5%;
}
.pointType>view:nth-of-type(odd) .point{
  border-right: 1px solid #dedede;
}
.symbol{
  border-radius: 4rpx;
  width: 40rpx;
  height: 40rpx;
  text-align: center;
  color: #fff;
  margin-right: 9rpx;
}
.detail{
  width: 700rpx;
  margin: 0 auto;
}
.detailTitle{
  height: 100rpx;
  padding: 0 20rpx;
  background: #fff;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-radius: 18rpx;
}
.detailTitle>view{
  display: flex;
  align-items: center;
  font-size: 14px;
  width: 50%;
}
.tabCard view{
  padding: 6rpx 9rpx;
  border-radius: 15rpx;
  margin: 0 12rpx;
  font-size: 12px;
}
view.selType{
  background: #38adff;
  color: #fff;
}
.btn-add{
  width: 700rpx;
  background: #38adff;
  color: #fff;
  font-size: 14px;
  text-align: center;
  height: 100rpx;
  line-height: 100rpx;
  margin-top: 30rpx;
  border-radius: 18rpx;
}
.detailInfo{
  margin: 0 auto;
  margin-top: 30rpx;
  width: 700rpx;
  border-radius: 18rpx;
  background: #fff;  
}
.detailItem{
  height: 120rpx;
  display: flex;
  width: 88%;
  margin: 0 auto;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid #dedede;
}
.detailItem>view:first-child{
  width: 70%;
  display: flex;
  font-size: 14px;
  align-items: center;
}
.detailItem>view:last-child{
  width: 30%;
  display: flex;
  font-size: 14px;
  align-items: center;  
  justify-content: flex-end;
}
.detailInfo image{
  width: 32rpx;
  height: 32rpx;
}
.isTap{
  width: 40rpx;
  height: 40rpx;
  border: 1px solid #999;
  border-radius: 6rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 12rpx;
}