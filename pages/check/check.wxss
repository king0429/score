page{
  min-height: 100%;
  background: #f0f0f0;
}
.section{
  width: 700rpx;
  margin: 0 auto;
}
.tab{
  height: 100rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.tabitem{
  width: 115rpx;
  height: 50rpx;
  border-radius: 60rpx;
  font-size: 14px;
  line-height: 50rpx;
  text-align: center;
  background: #fff;
  color: #999;
}
.checkInfo{
  width: 100%;

  background: #fff;
  border-radius: 18rpx;
}
.checkItem{
  width: 660rpx;
  margin: 0 auto;
  height: 110rpx;
  font-size: 14px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid #dedede;
}
.checkItem image{
  width: 40rpx;
  height: 40rpx;
}
.checkItem>view{
  display: flex;
}
.checkItem>view:first-child{
  width: 80%;
  height: 100%;
}
.checkName{
  width: 25%;
  line-height: 110rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.checkClass{
  width: 75%;
}
.checkDetail{
  width: 100%;
  height: 60rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  line-height: 80rpx;
}
.checkDate{
  color: #999;
  font-size: 12px;
  line-height: 50rpx;
}
.checkItem>view:last-child{
  width: 18%;
  height: 100%;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  font-size: 12px;
}
.sel{
    background: #ffc92b;
    color: #fff;
}
.none{
  color: #999;
  display: block;
  text-align: center;
  line-height: 100rpx;
}
.checkInfo .checkItem:last-child{
  border: none;
}