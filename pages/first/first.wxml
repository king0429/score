<view class='container'>
  <view class='banner'>
    <image src='/images/banner.jpg'></image>
    <view class='userinfo'>
      <view class='info'>
        <text>{{company}}</text>
        <text>{{department}}</text>
        <text>·{{name}}</text>
      </view>
      <view class='score'>
        <view class='pointTitle'>我的积分</view>
        <view class='point'>
          <view class='item'>
            <view>
              <text class='sum'>{{point_sum}}</text>
              <text>分</text>
            </view>
            <view>总分</view>
          </view>
          <view class='item'>
            <view>
              <text class='sum'>{{point_month}}</text>
              <text>分</text>
            </view>
            <view>月度</view>
          </view>
          <view class='item'>
            <view>
              <text class='sum'>{{ticket}}</text>
              <text>张</text>
            </view>
            <view>总奖券数</view>
          </view>
        </view>

      </view>
    </view>
  </view>
</view>
