/* pages/first/first.wxss */
page{
  background: #f0f0f0;
  min-height: 100%;
}

.score{
  padding: 0 20rpx;
  height: 220rpx;
  /* margin-top: 50rpx; */
}

.pointTitle{
  font-size: 14px;
  line-height: 1.3;
}
.point{
  display: flex;
  font-size: 14px;
}
.item{
  width: 33%;
  text-align: center;
}
.item text{
  line-height: 1.8;
}
.sum{
  font-size: 24px;
  margin-right: 6rpx;
}
.nav{
  height: 260rpx;
  width: 100%;
  display: flex;
  align-items: center;
  flex-direction: column;
  justify-content: space-between;
}
.navList{
  width: 700rpx;
  height: 120rpx;
  border-radius: 18rpx;
  box-shadow: -2rpx 2rpx 2px 2rpx rgba(111,111,111, .5);
  display: flex;
  align-items: center;
  background: #fff;
}
.nav .navList:first-child{
  margin-top: -20rpx;
  background: #fff;
}
.navItem{
  width: 50%;
  height: 70rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 14px;
}
.navItem image{
  height: 40rpx;
  width: 40rpx;
  margin-right: 20rpx;
}
.navInfo{
  display: flex;
  width: 100%;
  justify-content: center;
  align-items: center;
}
.navItem:nth-of-type(odd){
  border-right: 1px solid #dedede;
}
.table{
  width: 700rpx;
  margin: 0 auto;
  background: #fff;
  margin-top: 30rpx;
  border-radius: 18rpx;
  color: #333;
  box-shadow: -2rpx 2rpx 2px 2rpx rgba(111,111,111, .5);
  margin-bottom: 20rpx;
}
.th{
  display: flex;
  height: 80rpx;
}
.tableTitle{
  height: 95rpx;
  display: flex;
  align-items: center;
  padding: 0 40rpx;
  font-size: 14px;
}
.tableTitle image{
  width: 50rpx;
  height: 50rpx;
  margin-right: 20rpx;
}
.tabCard{
  width: 55%;
  display: flex;
  font-size: 12px;
  align-items: center;
  justify-content:space-around;
}
.tabCard view{
  padding:6rpx 10rpx;
  border-radius:9rpx;
}
/*选项卡选中样式  */
.tabSel{
  background: #38adff;
  color: #fff;
}
.thead{
  background: #dedede;
  display: flex;
  align-items: center;
  height: 66rpx;
  font-size: 14px;
}
.thead view,.tr view{
  width: 20%;
  text-align: center;
}
.tr{
  display: flex;
  align-items: center;
  height: 75rpx;
  font-size: 14px;
}
